# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Auth
GET     /login                      controllers.Auth.login
POST    /login                      controllers.Auth.login
GET     /logout                     controllers.Auth.logout
GET     /createAccount				controllers.Auth.newUser
POST	/createAccount				controllers.Auth.newUser

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /ide                        controllers.WebScala.ide
GET		/ide/*titles				controllers.WebScala.fileIde(titles: String)
POST    /interpret                  controllers.WebScala.interpret
GET     /compile/*titles            controllers.WebScala.compile(titles: String)
POST    /compile/*titles            controllers.WebScala.compile(titles: String)
POST    /save/*titles				controllers.WebScala.save(titles: String)
GET		/test/*titles				controllers.WebScala.test(titles: String)

# Files
GET     /newFile/*titles				controllers.WebScala.newFile(titles: String)
POST    /newFile/*titles			    controllers.WebScala.newFile(titles: String)
GET     /newFile                        controllers.WebScala.newFileHome()
POST    /newFile                        controllers.WebScala.newFileHome()
GET     /newFile/                       controllers.WebScala.newFileHome()
POST    /newFile/                       controllers.WebScala.newFileHome()
GET     /fileManager/*titles			controllers.WebScala.fileManager(titles: String)
GET     /fileManager					controllers.WebScala.fileManagerHome()
GET     /fileManager					controllers.WebScala.fileManagerHome()
GET     /submitFile/:block/:assignment  controllers.WebScala.submitFile(block: String, assignment: String)

# Blocks
GET     /newClass             	      					controllers.WebScala.newBlock
POST    /newClass                	 					controllers.WebScala.newBlock
GET     /myClasses					 					controllers.WebScala.myBlocks
GET     /myClasses/:block     	       					controllers.WebScala.findMyBlock(block: String)
GET     /myClasses/:block/newAssignment					controllers.WebScala.newAssignment(block: String)
POST    /myClasses/:block/newAssignment					controllers.WebScala.newAssignment(block: String)
GET     /myClasses/:block/editAssignment/:assignment 	controllers.WebScala.editAssignment(block: String, assignment: String)
POST    /myClasses/:block/editAssignment/:assignment 	controllers.WebScala.editAssignment(block: String, assignment: String)
GET     /myClasses/:block/:student						controllers.WebScala.getStudentFiles(block: String, student: String, titles = "")
GET     /myClasses/:block/:student/testCode/*titles	 	controllers.WebScala.getStudentAssignmentTest(block: String, student: String, titles: String)
GET     /myClasses/:block/:student/*titles				controllers.WebScala.getStudentFiles(block: String, student: String, titles: String)
GET     /joinClass										controllers.WebScala.joinBlock
POST    /joinClass										controllers.WebScala.joinBlock
POST    /starterCode/:block/:assignment                 controllers.WebScala.startAssignment(block: String, assignment: String)
